{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "incremental": true,
    "lib": ["es2018", "dom"]
  },
  "exclude": ["node_modules", "src/testing/**.*", "src/___mocks___/**.*"]
}
