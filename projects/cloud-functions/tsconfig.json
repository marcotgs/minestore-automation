{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@db/*": ["./src/db/*"],
      "@pubsub/*": ["./src/pubsub/*"],
      "@core/*": ["./src/core/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
