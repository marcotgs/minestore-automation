{
  "name": "@minestore/cloud-functions",
  "version": "1.0.0",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "start": "yarn clean && tsc-watch -p tsconfig.json --onFirstSuccess \"yarn start:emulator\" ",
    "start:emulator": "firebase emulators:start --import ./config/seed-data",
    "test": "jest",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^2.10.0",
    "class-validator": "^0.13.1",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.0",
    "fireorm": "^0.20.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "firebase-functions-test": "^0.2.0"
  }
}
